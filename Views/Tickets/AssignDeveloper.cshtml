@model TheBugTracker.Models.ViewModels.AssignDeveloperViewModel


<div class="container">
    <h2>Assign Developer For</h2>
    <div class="row">
        <div class="col-md-6">
            <h2>@Model.Ticket.Project.Name</h2>
            <h3>@Model.Ticket.Title</h3>
            <a style="font-size:small" asp-action="Details" asp-controller="Projects" asp-route-id="@Model.Ticket.ProjectId">@Model.Ticket.Project.Name</a>
            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer to Ticket</label>

                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="Tickets">
                        <input type="hidden" asp-for="Ticket.Id" />
                        <input type="hidden" asp-for="Ticket.ProjectId" />
                        <p>Description: @Model.Ticket.Description</p>

                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>

                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers"></select>
                            <option></option>
                        </div>
                        <div>If Member/s not showing, Assign Member to Developer Role and Add Member to your Team.
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Assign" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="UnassignedTickets" asp-controller="Tickets">UnasignedTickets</a> |
    </div>
</div>