@model TheBugTracker.Models.Project

@{
    ViewData["Title"] = "Archive";
}

<h2>Archive Project</h2>

<h3>Are you sure you want to Archive this Project?</h3>
<div class="crud-container">
    <div class="row">
        <div class="col-lg-7">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" disabled></textarea>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="Archived" class="form-check-input" disabled />
                <label asp-for="Archived" class="control-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="ProjectPriorityId" class="control-label">Project Priority</label>
                <input asp-for="ProjectPriority.Name" class="form-control" disabled />
            </div>

        </div>
        <div class="col-lg-5 ps-lg-5">
            <div class="form-group">
                @if (Model.FileData != null)
                {
                    <img id="imageFileData" class="img-fluid img-thumbnail" style="max-width:400px;max-height:400px;" src="data:image/*;base64,@(Convert.ToBase64String(Model.FileData))" />
                }
                else
                {
                    <img id="imageFileData" class="img-fluid img-thumbnail" style="max-width:400px;max-height:400px;" src="~/image/analytics-process-outline.svg" />
                }
            </div>
        </div>
        <form asp-action="Archive">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Archive" class="btn btn-danger" />
            <a onclick="javascript:history.back()" class="btn btn-cancel ms-2">Cancel</a>
        </form>
        <a class="btn-back" onclick="javascript:history.back()">Back</a>
    </div>
</div>