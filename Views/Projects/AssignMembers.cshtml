@model TheBugTracker.Models.ViewModels.ProjectMembersViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mt-4">@Model.Project.Name</h3>
            <div class="card mt-4 mb-4">
                <div class="card-header">
                    <label asp-for="@Model.Users" class="control-label">Assign team members to Project.</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignMembers" asp-controller="Projects">
                        <input hidden asp-for="Project.Id" />
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple" size="6"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn btn-actions" value="Assign Members" />
                                <a onclick="javascript:history.back()" class="btn btn-cancel ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn-back" onclick="javascript:history.back()">Back</a>
</div>